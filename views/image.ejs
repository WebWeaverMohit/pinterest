<% include ./partials/header.ejs %>
<div class="overflow-y-hidden flex items-center justify-center h-screen w-full">
    <div class="h-3/4 -mt-10 w-3/4 flex items-center px-4 py-6 justify-between bg-zinc-600 " id="hero">
        <div  class="h-full w-[63%]">
            <img class="h-full w-full object-cover" src="/images/uploads/<%= post.image %>" alt="">
        </div>
        <div class=" relative h-full w-[35%] px-7 py-10">
            <h2 class="text-2xl text-white mb-10 w-full">Title - <%= post.title %></h2>
            <h4 class="text-2xl text-white mb-10 w-full">Description - <%= post.description %></h4>
            <h5 class="text-xl text-white absolute right-0 bottom-10 ">Posted by - <%= post.user.username %></h5>
        </div>
    </div>
</div>
<% include ./partials/footer.ejs %>