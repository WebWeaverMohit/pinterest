<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-100 flex items-center justify-center">
  <div class="w-96 h-[60vh] bg-zinc-300 px-7 py-7 rounded-md">
    <i class="ri-pinterest-fill text-5xl w-full text-red-600 text-center inline-block mb-3 items-center "></i>
    <h1 class="text-3xl text-center mb-5 tracking-tight capitalize font-semibold leading-none">Welcome to Pinterest</h1>
    <form action="/login" method="post">
      <h3 class="text-1xl font-medium px-2">Username</h3>
      <input class="block border-2 rounded-2xl mb-3 w-full px-4 py-2" type="text" name="username" placeholder="username">
      <h3 class="text-1xl font-medium px-2">Password</h3>
      <input class="block border-2 rounded-2xl w-full px-4 py-2" type="password" name="password" placeholder="password">
      <a class="mt-1 px-2 font-semibold mt-2 inline-block" href="">Forgot Password ?</a>
      <input class="block border-2 rounded-full mt-3 w-[40%] ml-[30%] text-center items-center px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value="Login">
    </form>
    <a class="inline-block text-1xl mt-6 font-semibold text-center w-full" href="\register">Don't have an Account ?</a>
  </div>
</div>
<% include ./partials/footer.ejs %>