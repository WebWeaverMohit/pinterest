<% include ./partials/header.ejs %>
<div class="main h-screen w-full flex items-center justify-center bg-zinc-600">
    <div class="center bg-black w-72 px-8 py-8 rounded-lg text-white">
        <form action="/change-password" method="post">
            <h3 class="mb-2 font-normal">Old Password</h3>
            <input class="w-full px-2 py-1 rounded-lg text-black text-md mb-4 font-normal" type="password" name="oldPassword" placeholder="Old password">
            <h3 class="mb-2 font-normal">New Password</h3>
            <input class="w-full px-2 py-1 rounded-lg text-black text-md mb-4 font-normal" type="password" name="newPassword" placeholder="New Password">
            <h3 class="mb-2 font-normal">Confirm New Password</h3>
            <input class="w-full px-2 py-1 rounded-lg text-black text-md mb-6 font-normal" type="password" name="confirmPassword" placeholder="Confirm New Password"><br>
            <input class="relative left-[50%] -translate-x-[50%] px-3 py-2 bg-blue-500 rounded-lg font-semibold text-md" type="submit" value="Change Password">
        </form>
    </div>
</div>
<% include ./partials/footer.ejs %>