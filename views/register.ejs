<% include ./partials/header.ejs %>
<div class="w-full h-screen bg-zinc-100 flex items-center justify-center">
  <div class="w-96 h-[85vh] bg-zinc-300 px-7 py-7 rounded-md">
    <i class="ri-pinterest-fill text-5xl w-full text-red-600 text-center inline-block mb-3 items-center "></i>
    <h1 class="text-3xl text-center mb-5 tracking-tight capitalize font-semibold leading-none">create new account</h1>
    <form action="/register" method="post">
      <h3 class="text-1xl font-medium px-2">Username</h3>
      <input class="block border-2 rounded-2xl mb-3 w-full px-4 py-2" type="text" name="username" placeholder="username">
      <h3 class="text-1xl font-medium px-2">Full Name</h3>
      <input class="block border-2 rounded-2xl mb-3 w-full px-4 py-2" type="text" name="fullname" placeholder="Full Name">
      <h3 class="text-1xl font-medium px-2">E-mail</h3>
      <input class="block border-2 rounded-2xl mb-3 w-full px-4 py-2" type="email" name="email" placeholder="email">
      <h3 class="text-1xl font-medium px-2">Contact</h3>
      <input class="block border-2 rounded-2xl mb-3 w-full px-4 py-2" type="number" name="Contact" placeholder="Contact">
      <h3 class="text-1xl font-medium px-2">Password</h3>
      <input class="block border-2 rounded-2xl w-full px-4 py-2" type="password" name="password" placeholder="password">
      <input class="block border-2 w-full rounded-full mt-3 inline-block text-center items-center px-3 py-2 bg-red-600 text-white rounded-full" type="submit" value=" Create New Account">
    </form>
    <a class="inline-block text-1xl mt-6 font-semibold text-center w-full" href="\">Already have an Account !</a>
  </div>
</div>
<% include ./partials/footer.ejs %>