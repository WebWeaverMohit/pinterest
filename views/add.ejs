<% include ./partials/header.ejs %>
<div class="w-full text-white min-h-screen bg-zinc-600 px-10 py-5">
    <h1 class="text-xl">Create New Post</h1>
    <hr class="opacity-10 mt-2 mb-4">
    <form action="/createpost" method="post" enctype="multipart/form-data">
        <input class="block w-1/3 px-3 py-2 border-2 text-black" type="file" name="post-image">
        <input class="block w-1/3 px-3 py-2 text-black border-2 mt-2 rounded-md" type="text" placeholder="Title" name="title">
        <textarea class="block w-1/3 h-60 px-3 py-2 text-black border-2 mt-2 rounded-md" type="text" placeholder="Description" name="description"></textarea>
        <input class="block w-1/3 px-3 py-2 mt-2 bg-red-700 rounded-md" type="submit" value="Create Post">
    </form>
</div>
<% include ./partials/footer.ejs %>