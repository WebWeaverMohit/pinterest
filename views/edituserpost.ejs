<% include ./partials/header.ejs %>
<div class="overflow-y-hidden flex items-center justify-center h-screen w-full">
    <div class="h-3/4 -mt-10 w-3/4 flex items-center px-4 py-6 justify-between bg-zinc-600 " id="hero">
        <div  class="h-full w-[63%]">
            <img class="h-full w-full object-cover" src="/images/uploads/<%= post.image %>" alt="">
        </div>
        <div class=" relative h-full w-[35%] px-7 py-10">
            <form class="mt-10" action="/changepostdetail/<%= post._id %>" method="post">
                <h3 class="text-white font-semibold text-2xl mb-2">Title</h3>
                <input class="mb-7 text-white text-xl outline-none pt-4 py-2 font-lg border-b-2 bg-transparent" name="title" type="text" value="<%= post.title %>">
                <h3 class="text-white font-semibold text-2xl mb-2">Description</h3>
                <textarea class="mb-7 outline-none bg-transparent text-white text-xl pt-4 py-2 w-72 border-b-2" name="description" type="text"><%= post.description %></textarea><br>
                <input class="px-4 py-2 rounded-lg bg-sky-500 text-white font-semibold ml-[28%]" type="Submit" value="Change">
            </form>
        </div>
    </div>
</div>
<% include ./partials/footer.ejs %>